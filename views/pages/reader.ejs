<!--[if (gte IE 9)|!(IE)]><!-->
<html lang="en"> <!--<![endif]-->
    
<%- include('../partials/head'); %>

<body>

    <!-- OVERVIEW page -->
    <div data-role="page" id="page-overview">

        <%- include('../partials/header'); %>

        <div data-role="main" class="ui-content cmax8">
            
        <div  >
                
            <%- include('../partials/menu'); %>

            
            <!--Readers-->
            <div id="readers" class="ui-content" data-inset="true">
                <form action="/update-reader" id="form-reader" method="post">
                    <div class="card p-3 my-2">
                        <h3 class="has-text-weight-semibold is-size-5">Reader A</h3>
                        <div class="form-input">
                            <div class="ui-field-contain ">
                                <label  for="">Type</label>
                                <select name="type_a" id="" >
                                    <option value="HEXADECIMAL" <%= (type_a == 'HEXADECIMAL') ? 'selected=true' : '' %>  >Hexadecimal</option>
                                    <option value="DECIMAL" <%= (type_a == 'DECIMAL') ? 'selected=true' : '' %>>Decimal</option>
                                    <option value="ASCII" <%= (type_a == 'ASCII') ? 'selected=true' : '' %> >Ascii</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-input">
                            <div class="ui-field-contain " >
                                <label  for="">First Character</label>
                                <input type="number" value="<%= (first_character_a) ? first_character_a : 0 %>" name="first_character_a">
                            </div>
                        </div>
                        <div class="form-input">
                            <div class="ui-field-contain ">
                                <label  for="">Number Reader Character</label>
                                <input type="number" value="<%= (read_character_a) ? read_character_a : 0 %>" name="read_character_a" >
                            </div>
                        </div>

                        <div class="form-input">
                            <div class="ui-field-contain ">
                                <label  for="">Port </label>
                                <input type="text" value="<%= (port_a) ? port_a : '' %>" name="port_a" >
                            </div>
                        </div>
                        <div class="form-input">
                            <div class="ui-field-contain ">
                                <label  for="">Baudrate </label>
                                <input type="number" value="<%= (baudrate_a) ? baudrate_a : '' %>" name="baudrate_a" >
                            </div>
                        </div>
                        <div class="form-input">
                            <div class="ui-field-contain ">
                                <label  for="">Timeout </label>
                                <input type="number" value="<%= (timeout_a) ? timeout_a : '' %>" name="timeout_a" >
                            </div>
                        </div>
                        <div class="form-input">
                            <div class="ui-field-contain ">
                                <label  for="">Parity </label>
                                <input type="text" value="<%= (parity_a) ? parity_a : '' %>" name="parity_a" >
                            </div>
                        </div>
                        <div class="form-input">
                            <div class="ui-field-contain ">
                                <label  for="">Stopbits </label>
                                <input type="number" value="<%= (stopbits_a) ? stopbits_a : '' %>" name="stopbits_a" >
                            </div>
                        </div>
                    </div>
                    

                    <div class="card p-3 my-2">
                        <h3 class="has-text-weight-semibold is-size-5">Reader B</h3>
                        <div class="form-input">
                            <div class="ui-field-contain ">
                                <label  for="">Type</label>
                                <select name="type_b"  id="" value="<%= (type_b) ? type_b : 'error' %>">
                                    <option value="HEXADECIMAL" <%= (type_b == 'HEXADECIMAL') ? 'selected=true' : '' %> >Hexadecimal</option>
                                    <option value="DECIMAL" <%= (type_b == 'DECIMAL') ? 'selected=true' : '' %>>Decimal</option>
                                    <option value="ASCII" <%= (type_b == 'ASCII') ? 'selected=true' : '' %> >Ascii</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-input">
                            <div class="ui-field-contain ">
                                <label  for="">First Character</label>
                                <input type="number"  value="<%= (first_character_b) ? first_character_b : 0 %>" name="first_character_b">
                            </div>
                        </div>
                        <div class="form-input">
                            <div class="ui-field-contain ">
                                <label  for="">Number Reader Character</label>
                                <input type="number" value="<%= (read_character_b) ? read_character_b : 0 %>" name="read_character_b">
                            </div>
                        </div>
                        <div class="form-input">
                            <div class="ui-field-contain ">
                                <label  for="">Port </label>
                                <input type="text" value="<%= (port_b) ? port_b : '' %>" name="port_b" >
                            </div>
                        </div>
                        <div class="form-input">
                            <div class="ui-field-contain ">
                                <label  for="">Baudrate </label>
                                <input type="number" value="<%= (baudrate_b) ? baudrate_b : '' %>" name="baudrate_b" >
                            </div>
                        </div>
                        <div class="form-input">
                            <div class="ui-field-contain ">
                                <label  for="">Timeout </label>
                                <input type="number" value="<%= (timeout_b) ? timeout_b : '' %>" name="timeout_b" >
                            </div>
                        </div>
                        <div class="form-input">
                            <div class="ui-field-contain ">
                                <label  for="">Parity </label>
                                <input type="text" value="<%= (parity_b) ? parity_b : '' %>" name="parity_b" >
                            </div>
                        </div>
                        <div class="form-input">
                            <div class="ui-field-contain ">
                                <label  for="">Stopbits </label>
                                <input type="number" value="<%= (stopbits_b) ? stopbits_b : '' %>" name="stopbits_b" >
                            </div>
                        </div>
                    </div>

                    <div class="has-text-right">
                        <button type="submit" class="button is-info" style="width: auto !important;">Submit</button>
                    </div>
                </form>

            </div>
            
            <!-- /content -->
        </div>
        <!-- /tabs -->
        </div>

        <!-- /footer -->
        <div data-role="popup" id="unipi_config_form_div">
            <form id="unipi_config_form">
                <div style="padding:20px 20px;" class="" id="unipi_config_form_inner_div">
                </div>
            </form>
        </div>
        

    </div>
    <script rel="javascript" type="text/javascript" src="js/app.js"></script>


</body>

</html>
